<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat">
        <item name="android:background">@color/colorPrimary</item>

    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="TextViewStyle" parent="TextAppearance.AppCompat" >
        <item name="android:textColor">#fff2df</item>
        <item name="android:textSize">23sp</item>
        <item name="android:layout_width">300dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_height">70dp</item>
        <item name="android:layout_margin">15dp</item>

    </style>
    <style name="ButtonStyle">
        <item name="android:background">#082139</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_marginBottom">25dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#fff2df</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="EditTextStyle">
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@drawable/edittextstyle</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_width">300dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:textColor">#fff</item>
        <item name="android:textColorHint">#fff</item>
        <item name="android:layout_marginBottom">20dp</item>
    </style>

    <style name="ListViewStyle">
        <item name="android:layout_margin">5dp</item>
        <item name="android:background">@drawable/listviewstyle</item>
    </style>

    <style name="ListGroupStyle">
        <item name="android:layout_margin">5dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:dividerHeight">3dp</item>

    </style>


</resources>
